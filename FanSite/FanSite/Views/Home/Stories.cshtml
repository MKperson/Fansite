@{ 
    Layout = null;
}
@model StoryModel
<body>
    <p>
        @ViewData["Message"]

    </p>
    <div>
        <form asp-action="PostStory" method="post">
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Date">Date:</label>
                <input type="date" class="form-control" asp-for="Date" />
            </div>
            <div class="form-group">
                <label asp-for="Story">Story:<br /></label>
                <textarea class="form-control" asp-for="Story"></textarea>
            </div>
            <div class="form-group">
                <br />
                <button type="submit">Submit</button>
            </div>
        </form>
       
           
        <p>
            @ViewData["Title"]<br />
            @ViewData["Date"]<br />
            @ViewData["Story"]
        </p>

    </div>
</body>